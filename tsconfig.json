{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "noUnusedLocals": false
  },
  "exclude": ["node_modules", "**/**/*.test.ts", "**/**/*.stories.tsx", "**/**/*.md", "**/dist", "packages/.test", "packages/_docs"]
}
